{
      "name": "query-transactions-with-time",
      "operation-type": "search",
      "index": "apm-*transaction*",
      "body": {
        "size": 500,
        "query": {
            "bool": {
                "filter": [
                    {
                        "term": {
                            "processor.event": "transaction"
                        }
                    },
                    {
                        "range": {
                            "@timestamp": {
                                "gte": "now-2d/d",
                                "lte": "now/d",
                                "format": "epoch_millis"
                            }
                        }
                    }
                ]
            }
        },
        "sort": [
            {
                "transaction.duration.us": {
                    "order": "asc"
                }
            }
        ]
      }
    },
